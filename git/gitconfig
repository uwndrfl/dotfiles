[alias]
    lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status -sb
    undo = checkout --
    subupdate = submodule update --init --recursive
[merge]
    tool = vimdiff
[core]
    editor = vim
    pager = less -F -X
    excludesfile = "~/.gitignore_global"
[diff]
    tool = vimdiff
[status]
    showUntrackedFiles = all
